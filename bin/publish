#!/bin/bash
set -ex
cd "$(dirname "$0")/.."

# prepare
rm -fr .build
git clone git@github.com:uchiru/docker-stats-exporter .build
cd .build
git checkout $1

# build
docker build -t quay.io/uchiru/docker-stats-exporter:$1 .
docker push quay.io/uchiru/docker-stats-exporter:$1

rm -fr .build
echo "DONE :)"
